<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ZebraBangumi"
                    xmlns:mex="clr-namespace:MetroExtras"
                    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <Style x:Key="SaveFromBtn" TargetType="ToggleButton" BasedOn="{StaticResource ExBorderMetroToggleButton}">
        <Setter Property="mex:MetroExtraColor.MainBrush" Value="DimGray"/>
        <Setter Property="Content" Value="保存当前图表"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>